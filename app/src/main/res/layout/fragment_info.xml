<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marmot.intrepid.naturalhealer.view.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/banniere"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_gravity="top"
            android:src="@drawable/banniere" />

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="\nGAME INFORMATIONS" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="\n\n
    This game has been created by a team of 3 gorgeous people that are very very very passionate.\n\n
    Camille KESSAB, Julien RABAULT and Justine FERRON are really happy to have you playing their new game !\n\n" />

        <TextView
            android:id="@+id/infoEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:text="Enjoy your game !" />

    </LinearLayout>

</FrameLayout>
